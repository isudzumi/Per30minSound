<Window x:Name="playSound" x:Class="playSound.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:playSound"
        mc:Ignorable="d"
        Title="MainWindow" Height="174.51" Width="525" ResizeMode="CanMinimize" SizeToContent="Width">
    <Grid>
        <Label x:Name="label" Content="音声ファイル" HorizontalAlignment="Left" Margin="21,61,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="fileName" Margin="94,64,98,0" TextWrapping="Wrap" Background="White" Height="20" VerticalAlignment="Top" Width="327" Text="{Binding Mode=OneWay}"/>
        <Button x:Name="selectButton" Content="選択" Margin="0,64,21,0" RenderTransformOrigin="0.489,0.24" Click="selectButton_Click" Height="20" VerticalAlignment="Top" HorizontalAlignment="Right" Width="77"/>
        <Button x:Name="setButton" Content="再生" Margin="0,102,23,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" RenderTransformOrigin="0.37,0.053" Click="setButton_Click" HorizontalAlignment="Right" Width="90"/>

    </Grid>
</Window>
